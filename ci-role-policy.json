{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowAmplify",
      "Effect": "Allow",
      "Action": "amplify:*",
      "Resource": "*"
    },
    {
      "Sid": "AllowAmplifyBranchesAndApps",
      "Effect": "Allow",
      "Action": [
        "amplify:CreateBranch",
        "amplify:CreateApp",
        "amplify:UpdateApp"
      ],
      "Resource": [
        "arn:aws:amplify:*:*:apps/*"
      ]
    },
    {
      "Sid": "AllowCloudWatch",
      "Effect": "Allow",
      "Action": [
        "cloudwatch:*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowCognito",
      "Effect": "Allow",
      "Action": [
        "cognito-identity:GetId",
        "cognito-identity:SetPrincipalTagAttributeMap",
        "cognito-identity:SetIdentityPoolRoles",
        "cognito-identity:ListIdentityPools",
        "cognito-identity:CreateIdentityPool",
        "cognito-identity:UnlinkIdentity",
        "cognito-identity:DeleteIdentities",
        "cognito-identity:GetOpenIdToken",
        "cognito-identity:DescribeIdentity",
        "cognito-identity:GetCredentialsForIdentity",
        "cognito-identity:AddCustomAttributes"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowCognitoIdentity",
      "Effect": "Allow",
      "Action": [
        "cognito-identity:*"
      ],
      "Resource": [
        "arn:aws:cognito-identity:*:*:identitypool/*"
      ]
    },
    {
      "Sid": "AllowCognitoIdp",
      "Effect": "Allow",
      "Action": [
        "cognito-idp:ForgotPassword",
        "cognito-idp:GlobalSignOut",
        "cognito-idp:ConfirmSignUp",
        "cognito-idp:CreateUserPool",
        "cognito-idp:ForgetDevice",
        "cognito-idp:RevokeToken",
        "cognito-idp:GetUserAttributeVerificationCode",
        "cognito-idp:InitiateAuth",
        "cognito-idp:DeleteUser",
        "cognito-idp:SetUserMFAPreference",
        "cognito-idp:GetUser",
        "cognito-idp:ConfirmForgotPassword",
        "cognito-idp:SetUserSettings",
        "cognito-idp:SignUp",
        "cognito-idp:VerifyUserAttribute",
        "cognito-idp:ListDevices",
        "cognito-idp:ListUserPools",
        "cognito-idp:AssociateSoftwareToken",
        "cognito-idp:VerifySoftwareToken",
        "cognito-idp:GetDevice",
        "cognito-idp:RespondToAuthChallenge",
        "cognito-idp:DeleteUserAttributes",
        "cognito-idp:UpdateUserAttributes",
        "cognito-idp:CreateUserPoolDomain",
        "cognito-idp:DescribeUserPoolDomain",
        "cognito-idp:UpdateDeviceStatus",
        "cognito-idp:ChangePassword",
        "cognito-idp:ConfirmDevice",
        "cognito-idp:ResendConfirmationCode",
        "cognito-idp:DescribeUserPool",
        "cognito-idp:GetUserPoolMfaConfig",
        "cognito-idp:CreateUserPoolClient",
        "cognito-idp:DescribeUserPoolClient",
        "cognito-idp:UpdateUserPoolClient",
        "cognito-idp:UpdateUserPool",
        "cognito-idp:AdminCreateUser",
        "cognito-idp:AdminDeleteUser",
        "cognito-idp:AdminInitiateAuth",
        "cognito-idp:AdminSetUserPassword",
        "cognito-idp:CreateIdentityProvider",
        "cognito-idp:DeleteIdentityProvider",
        "cognito-idp:DescribeIdentityProvider",
        "cognito-idp:UpdateIdentityProvider",
        "cognito-idp:AddCustomAttributes"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowDynamo",
      "Effect": "Allow",
      "Action": [
        "dynamodb:ListContributorInsights",
        "dynamodb:DescribeReservedCapacityOfferings",
        "dynamodb:ListGlobalTables",
        "dynamodb:ListTables",
        "dynamodb:DescribeReservedCapacity",
        "dynamodb:ListBackups",
        "dynamodb:PurchaseReservedCapacityOfferings",
        "dynamodb:DescribeLimits",
        "dynamodb:ListExports",
        "dynamodb:ListStreams",
        "dynamodb:PutItem",
        "dynamodb:GetItem"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowDynamo2",
      "Effect": "Allow",
      "Action": [
        "dynamodb:*"
      ],
      "Resource": [
        "arn:aws:dynamodb::*:global-table/*",
        "arn:aws:dynamodb:*:*:table/*/backup/*",
        "arn:aws:dynamodb:*:*:table/*/index/*",
        "arn:aws:dynamodb:*:*:table/*/export/*",
        "arn:aws:dynamodb:*:*:table/*/stream/*"
      ]
    },
    {
      "Sid": "AllowDynamo3",
      "Effect": "Allow",
      "Action": "dynamodb:*",
      "Resource": [
        "arn:aws:dynamodb:*:*:table/*"
      ]
    },
    {
      "Sid": "AllowLambda",
      "Effect": "Allow",
      "Action": [
        "lambda:CreateFunction",
        "lambda:ListFunctions",
        "lambda:ListEventSourceMappings",
        "lambda:ListLayerVersions",
        "lambda:ListLayers",
        "lambda:GetAccountSettings",
        "lambda:CreateEventSourceMapping",
        "lambda:ListCodeSigningConfigs",
        "lambda:CreateCodeSigningConfig"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowLambda2",
      "Effect": "Allow",
      "Action": [
        "lambda:*"
      ],
      "Resource": [
        "arn:aws:lambda:*:*:layer:*:*",
        "arn:aws:lambda:*:*:function:*:*",
        "arn:aws:lambda:*:*:code-signing-config:*",
        "arn:aws:lambda:*:*:event-source-mapping:*"
      ]
    },
    {
      "Sid": "AllowLambda3",
      "Effect": "Allow",
      "Action": "lambda:*",
      "Resource": [
        "arn:aws:lambda:*:*:layer:*",
        "arn:aws:lambda:*:*:function:*"
      ]
    },
    {
      "Sid": "AllowApiGateway",
      "Effect": "Allow",
      "Action": [
        "apigateway:*",
        "apigateway:PATCH"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowExecuteApi",
      "Effect": "Allow",
      "Action": [
        "execute-api:Invoke"
      ],
      "Resource": "arn:aws:execute-api:*:*:*"
    },
    {
      "Sid": "AllowIam",
      "Effect": "Allow",
      "Action": [
        "iam:AttachRolePolicy",
        "iam:CreateRole",
        "iam:DeleteRolePolicy",
        "iam:GetRole",
        "iam:GetRolePolicy",
        "iam:*InstanceProfile*",
        "iam:ListAttachedRolePolicies",
        "iam:ListRolePolicies",
        "iam:PassRole",
        "iam:PutRolePolicy",
        "iam:CreatePolicy",
        "iam:GetPolicy",
        "iam:GetPolicyVersion",
        "iam:ListPolicyVersions",
        "iam:DeletePolicy"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowSsm",
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameters",
        "ssm:GetParameter"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowSqsQueueAdmin",
      "Effect": "Allow",
      "Action": [
        "sqs:CreateQueue",
        "sqs:DeleteQueue",
        "sqs:GetQueueAttributes",
        "sqs:ListQueues",
        "sqs:ListQueueTags",
        "sqs:SetQueueAttributes",
        "sqs:TagQueue",
        "sqs:UntagQueue"
      ],
      "Resource": "*"
    }
  ]
}